---
import Home from "../layouts/home.astro";
import FloatingNavbar from "../components/navigation/floatingNavbar.astro";
import PictureAndCaption from "../components/structure/pictureAndCaption.astro";
import ImageDescription1 from "../components/structure/image_description_1.astro"
import Button1 from "../components/navigation/button1.astro";
const coolashack1 = "/images/_DSC9679(1).jpg"

const testimg = "/images/_DSC9598.JPG"

const bento1 = "/images/_DSC9724(2).JPG"
const bento2 = "/images/_DSC9708(3).jpg"
const bento3 = "/images/20250622_164327.jpg"
const bento4 = "/images/1000041630.jpg"
const bento5 = "/images/20250315_161919.jpg"
const bento6 = "/images/counterspell_cropped.png"
const bento7 = "/images/P1240546.JPG"
const bento8 = "/images/1000037180_cropped.png"

const bannerimg1 = "/images/IMG_4142.JPG"
const bannerimg2 = "/images/_DSC9708(3).jpg"
const bannerimg3 = "/images/coolashackbg.png"
const coolashacklogo = "images/coolashack-logo.png"
import Button2 from "../components/navigation/button2.astro"

import Card from "../components/structure/card.astro";
import Card2 from "../components/structure/card2.astro"
import Card3 from "../components/structure/card3.astro"
import Card4 from "../components/structure/card4.astro"
import Card5 from "../components/structure/card5.astro"

import BentoGrid from "../components/structure/bentoGrid.astro";
import LongCardGrid from "../components/structure/longCardGrid.astro";

---

<html lang="en">
  <Home BannerText="We run Hackathons for teens in the UK" LogoType="B+W">
    
    <ImageDescription1>
      <div class="description">

        
          <div class="text_wrapper">
            <h1>
              "We organise hackathons for teens across the UK, creating opportunities to make awesome projects, while learning and growing together"
            </h1>
            <p>
              Hackathons are social coding events, where people can get together,
              make new friends, and work on amazing projects together no matter
              their skill level. Our mission is to run these empowering events, helping teens build technical skills and confidence, and break down some of the barriers to accessing CS education.
            </p>
            <Button1 href="" text="Support Us" />
          </div>
        

      </div>
      <div class="image">
        <div class="image_container">
          <img src={coolashack1} />
          <p>Scrapyard Cambridge @ Raspberry Pi Foundation</p>
        </div>
      </div>
  </ImageDescription1>

  
  
  <Card3>
    <img src={bannerimg1}>
    <div class="filter"/>
    <div class="content">
      <div>
        <h1>Volunteer with Youthacks!</h1>
        <p>We're looking for passionate volunteers to help with our next events! Are you over 18, able to pass an enhanced DBS check, and available on the 27th-28th September? If so, we would love to hear from you! Bonus points if you have experience with coding or CS education!</p>
      </div>
      <div class="button-container">
        <Button2 href="" text="Register your interest >"/>
      </div>
    </div>
  </Card3>

  
  
  <BentoGrid>
    <Card2 class="grid1">
      <img src={bento1}>
    </Card2>
    <Card2 class="grid2">
      <img src={bento2}>
    </Card2>
    <Card2 class="grid3">
      <img src={bento3}>
    </Card2>
    <Card2 class="grid4">
      <img src={bento4}>
    </Card2>
    <Card2 class="grid5">
      <img src={bento5}>
    </Card2>
    <Card2 class="grid6">
      <img src={bento6}>
    </Card2>
    <Card2 class="grid7">
      <img src={bento7}>
    </Card2>
    <Card2 class="grid8">
      <img src={bento8}>
    </Card2>
  </BentoGrid>

  <Card4>
    <img src={bannerimg2}>
    <div class="filter"/>
    <div class="content">
      <div>
        <h1>Interested in sponsoring?</h1>
        <p>Our events are always free to attend, and so we are always on the lookout for companies who share our beliefs in investing in the next generation of makers to work with us! Take a look at our sponsorship prospectus to find out more about how we can work with you.</p>
      </div>
      <div class="button-container">
        <Button2 href="" text="Learn More >"/>
      </div>
    </div>
  </Card4>

  <Card5>
    <img src={bannerimg3}/>
    <div class="filter"/>
    <div class="content">
      
      <div>
        <img class="logo" src={coolashacklogo}>
      </div>
      
      <div class="content-container">
        <h1>Launched 24th May 2025</h1>
        <p>50 attendees, 10 high quality projects, Â£6500+ of swag. A 12 hour event where we had complete creative control, supported by the Raspberry Pi Foundation, Yubico, Learn Anything, and Aromi</p>
        <Button2 href="" text="Learn More >"/>
      </div>
      
    </div>
  </Card5>

  </Home>
  <style>
    
  </style>
</html>
